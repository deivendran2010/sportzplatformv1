  <select id="selectByPrimaryKey" parameterType="java.lang.Integer" resultMap="BaseResultMap">
    select state_id, state_name, statecode, country_id
    from sportzplatform.state
    where state_id = #{stateId,jdbcType=INTEGER}
  </select>
  <select id="selectByName" parameterType="java.lang.String" resultMap="BaseResultMap">
    select state_id, state_name, statecode, country_id
    from sportzplatform.state
    where state_name = #{stateName,jdbcType=VARCHAR}
  </select>
  <select id="selectAll" resultMap="BaseResultMap">
    select state_id, state_name, statecode, country_id
    from sportzplatform.state
  </select>
  
   <select id="getstateByCountry" resultMap="BaseResultMap">
    select  state_id, state_name, statecode, country_id
