  <resultMap id="BaseResultMap" type="com.skiya.sportzplatform.domain.State">
    <id column="state_id" jdbcType="INTEGER" property="stateId" />
    <result column="state_name" jdbcType="VARCHAR" property="stateName" />
    <result column="statecode" jdbcType="VARCHAR" property="stateCode" />
    <result column="country_id" jdbcType="INTEGER" property="countryId" />
  </resultMap>
  <delete id="deleteByPrimaryKey" parameterType="java.lang.Integer">
    delete from sportzplatform.state
    where state_id = #{stateId,jdbcType=INTEGER}
  </delete>
  
